.countdown {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #EDEDED;
  z-index: 10;
  text-align: center;
}
.countdown text {
  position: relative;
  font-size: 100rpx;
  font-style: normal;
  font-family: fantasy;
  top: calc(50% - 50rpx);
}